
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoreInformationFragment">
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />


    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="314dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:minHeight="48dp"

        android:text="@string/more_information_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/listingTitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/detail_description_about_your_listing2"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="12dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/purple_200"
        app:endIconMode="clear_text"

        app:shapeAppearance="@style/Rounded"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="331dp"
            android:layout_height="119dp"

            tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />


    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/key_tags"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="@string/tages_or_keywords_comma_separated"

        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="12dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/purple_200"
        app:endIconMode="clear_text"

        app:shapeAppearance="@style/Rounded"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="331dp"
            android:layout_height="119dp"

            tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/next"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/african_button_bg"
        android:text="Submit"></Button>

</LinearLayout>